@model Hospital.Server.Models.AdminViewModels.AddResultViewModel

@{
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}

@using (Html.BeginForm("AddResult", "Administration", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(x => x.Patient.UserName, new { @class = "col-md-offset-3 col-md-2 control-label" })
            <div class="col-md-3">
                <input type="text" name="UserName" value="@Model.Patient.UserName" class = "form-control" disabled ="disabled"/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.StatusResult, new { @class = "col-md-offset-3 col-md-2 control-label" })
            <div class="col-md-3">
                @Html.EnumDropDownListFor(m => m.StatusResult, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class ="control-label col-md-offset-3 col-md-2" for="uploadFile">Result File(txt, pdf)</label>
            <div class="col-md-3">
                <input type="file" id="Avatar" name="uploadFile" class="form-control"/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-6 col-md-3">
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>    
}
