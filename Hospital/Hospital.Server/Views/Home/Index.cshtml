@model List<Hospital.Server.Models.SpecialitiesIndexViewModel>


<div class="user-dashboard">
    @*<h1></h1>*@
    <div class="row">
        <div class="col-md-5 col-sm-5 col-xs-12 gutter">
            <div class="sales">
                <h2>Specialties</h2>
                <div class="btn-group">
                    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span>Select:</span> Category
                    </button>
                    <div class="dropdown-menu">
                        @foreach (var speciality in Model)
                        {
                            <a href="@Url.Action("GetSpecialityById", "Specialities", new { id = @speciality.Id})">@speciality.Title</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7 col-sm-7 col-xs-12 gutter">
            <div class="sales report">
                <h2>Clinical Trials</h2>
                <div class="btn-group">
                    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         Trials
                    </button>
                    <div class="dropdown-menu">
                        @foreach (var trials in Model)
                        {
                            foreach (var trial in trials.ClinicalTrials)
                            {
                                <a href="@Url.Action("GetClinicalTrialById", "ClinicalTrials", new { id = @trial.Id})">@trial.Title</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>