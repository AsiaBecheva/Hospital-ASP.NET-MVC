@using Hospital.Data.Constants

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="home">

    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                    <a hef="home.html">
                        <img src="~/Content/images/logo2.jpg" alt="merkery_logo" class="hidden-xs hidden-sm">
                        <img src="images/circle-logo.png" alt="merkery_logo" class="visible-xs visible-sm circle-logo">
                    </a>
                </div>
                <div class="navi">
                    <ul>
                        @if (Request.IsAuthenticated && User.IsInRole(GlobalConstants.adminRoleName))
                        {
                            <li style="background-color:midnightblue"><a href="@Url.Action("ClinicalResults", "Administration")"><i class="fa fa-users" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Administration</span></a></li>
                        }
                        <li class="active"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span></a></li>
                        @if (Request.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("GetClinicalResult", "ClinicalResults")"><i class="fa fa-file-pdf-o" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Clinical Results</span></a></li>
                        }
                        else
                        {
                            <li><a href="#" data-toggle="modal" data-target="#login-modal"><i class="fa fa-file-pdf-o" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Clinical Results</span></a></li>
                        }
                        <li><a href="@Url.Action("AllTrials", "ClinicalTrials")"><i class="fa fa-stethoscope" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Clinical Trials</span></a></li>
                        <li><a href="@Url.Action("AllDoctors", "Doctors")"><i class="fa fa-user-md" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Doctors</span></a></li>
                        @*<li><a href="#"><i class="fa fa-info-circle" aria-hidden="true"></i><span class="hidden-xs hidden-sm">About Us</span></a></li>*@
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <div class="row">
                    <header>
                        <div class="col-md-7">
                            <nav class="navbar-default pull-left">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                            </nav>
                            <div class="search hidden-xs hidden-sm">
                                <input type="text" placeholder="Search" id="search">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="header-rightside" style="margin-top:12px;">
                                <ul class="list-inline header-top pull-right">
                                    <li><a href="#" class="add-project" data-toggle="modal" data-target="#add_project">Contact Us</a></li>
                                    @Html.Partial("_LoginPartial")
                                </ul>
                            </div>
                        </div>
                    </header>
                </div>

                <div class="container body-content">
                    @RenderBody()
                    <hr />
                </div>
            </div>
        </div>
    </div>

    <div id="add_project" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header login-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title text-center">Contact us</h4>
                </div>
                <div class="modal-body">
                    <input type="text" placeholder="Name" name="Name">
                    <input type="text" placeholder="Email" name="Email">
                    <input type="text" placeholder="Age" name="Age">
                    <textarea placeholder="Message"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="cancel" data-dismiss="modal">Close</button>
                    <button type="button" class="add-project" data-dismiss="modal">Send</button>
                </div>
            </div>
        </div>
    </div>
    <footer id="footer" class="clearfix">
        <div id="footer-widgets">
            <div class="container">
                <div id="footer-wrapper">
                    <div class="row">
                        <div class="col-sm-6 col-md-3">
                            <div id="meta-3" class="widget widgetFooter widget_meta">
                                <h4 class="widgettitle">Importent Page :</h4>
                                <ul>
                                    <li><a href="#"><i class="fa fa-home fa-fw"></i> Home</a></li>
                                    <li><a href="#"><i class="fa fa-link"></i>   Privacy Policy</a></li>
                                    <li><a href="#"><i class="fa fa-envelope fa-fw"></i> Contact Us</a></li>
                                </ul>
                            </div>
                        </div> <!-- end widget1 -->
                        <div class="col-sm-6 col-md-3">
                            <div id="recent-posts-3" class="widget widgetFooter widget_recent_entries">
                                <h4 class="widgettitle">Our social media :</h4>
                                <ul>
                                    <li>
                                        <a href="https://www.facebook.com/asq.becheva" target="_blank"><i class="fa fa-facebook"></i> Facebook</a>
                                    </li>
                                    <li>
                                        <a href="https://github.com/AsiaBecheva" target="_blank"><i class="fa fa-twitter"></i> Twitter</a>
                                    </li>
                                    <li>
                                        <a href="https://github.com/AsiaBecheva" target="_blank"><i class="fa fa-youtube"></i> Youtube</a>
                                    </li>
                                </ul>
                            </div>
                        </div> <!-- end widget1 -->
                        <div class="col-sm-6 col-md-6">
                            <div id="meta-4" class="widget widgetFooter widget_meta">
                                <h4 class="widgettitle">Subscribe :</h4>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">E-mail :</span>
                                        <input class="form-control" placeholder="Write your email .." type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">Phone  :</span>
                                        <input class="form-control" placeholder="+000000" type="text">
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="button">Subscribe !</button>
                                        </span>
                                    </div>
                                </div>

                            </div>
                        </div> 
                    </div> 
                </div> 
            </div> 
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('[data-toggle="offcanvas"]').click(function () {
                $("#navigation").toggleClass("hidden-xs");
            });
        });
    </script>
    
</body>
</html>
